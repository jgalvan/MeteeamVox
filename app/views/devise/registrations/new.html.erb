<!DOCTYPE html>
<html style="width:100%; height:100%; margin: 0;">
  <head>
    <title>MeeteamVox</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="home-body">
  <div class="landing">

      <div class="name">
          <h1 class="hero-text"> Join Meeteam Vox</h1>
      </div>

      <div class="sign-in-form-box row z-depth-5">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <div class="input-field">
            <%= f.text_field :first_name %>
            <%= f.label :first_name, setClassForLabel(resource.first_name) %>
          </div>

          <div class="input-field">
            <%= f.text_field :last_name%>
            <%= f.label :last_name, setClassForLabel(resource.last_name) %>
          </div>

          <div class="input-field">
            <%= f.email_field :email%>
            <%= f.label :email, "E-mail", setClassForLabel(resource.email) %>
          </div>

          <div class="input-field">
            <%= f.text_field :username%>
            <%= f.label :username, setClassForLabel(resource.username) %>
          </div>

          <div class="input-field">
            <%= f.text_field :country%>
            <%= f.label :country, setClassForLabel(resource.username) %>
          </div>

          <div class="input-field">
            <%= f.password_field :password, autocomplete: "off" %>
            <!--
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %> -->
            <%= f.label :password%>
          </div>

          <div class="input-field">
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
            <%= f.label :password_confirmation%>
          </div>

            <%= devise_error_messages! %>

          <%= f.submit 'Register', class: "btn waves-effect waves-light sign-in-button" %><br>
          <%= link_to "Already registered? Sign in!", unauthenticated_root_path() %>
        <% end %>

      </div>

  </div>

  <footer class="page-footer">
      <div class="footer-copyright">
          <div class="container">
              © <%= Date.today.year %> Jesús Galván and Diego Astiazarán
              <a class="grey-text text-lighten-4 right footer-link" href="#">About us</a>
              <a class="grey-text text-lighten-4 right footer-link" href="#">How it works</a>
              <a class="grey-text text-lighten-4 right footer-link" href="#">Try it out!</a>
          </div>
      </div>
  </footer>

  </body>
</html>